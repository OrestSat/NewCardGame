<p id = "notice"><%= notice %></p>

<p><strong>Name:</strong>
  <%= @game.name %>
</p>

<p><strong>Description:</strong>
  <%= @game.description %>
</p>
<table>
	<thead>
	  <tr>
	    <th> Game id </th>
	    <th> Cards count </th>
	  </tr>
	</thead>
	<tbody>
		<% @game.players.each do |player| %>
			<tr>
				<td> <%= player.game_id %> </td>
				<td> <%= player.cards_count %> </td>
			</tr>
		<% end %>	
	</tbody>
</table>
<h1><%= current_user.id %></h1>

<%= link_to 'Edit', edit_game_path(@game) , :class => "btn btn-info" %> |
<%= link_to 'Back', games_path , :class => "btn btn-danger" %>